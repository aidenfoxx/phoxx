{
	"name": "phoxx-mvc/phoxx",
	"description": "Phoxx MVC base project",
	"require": {
		"php" : ">=7.1.0",
		"twig/twig": "2.4.*",
		"smarty/smarty": "3.1.*",
		"doctrine/orm": "2.5.*",
		"filp/whoops": "2.1.*",
		"sami/sami": "4.1.*",
		"mnsami/composer-custom-directory-installer": "1.1.*",
		"phoxx-mvc/core": "dev",
		"phoxx-mvc/package-parameter": "dev",
		"phoxx-mvc/package-permission": "dev",
		"phoxx-mvc/package-user": "dev"
	},
	"repositories": [
		{
			"type": "package",
			"package": {
				"name": "phoxx-mvc/core",
				"version": "dev",
				"source": {
					"type": "git",
					"url":  "https://github.com/phoxx-mvc/core.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "phoxx-mvc/package-parameter",
				"version": "dev",
				"source": {
					"type": "git",
					"url":  "https://github.com/phoxx-mvc/package-parameter.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "phoxx-mvc/package-permission",
				"version": "dev",
				"source": {
					"type": "git",
					"url":  "https://github.com/phoxx-mvc/package-permission.git",
					"reference": "master"
				}
			}
		},
		{
			"type": "package",
			"package": {
				"name": "phoxx-mvc/package-user",
				"version": "dev",
				"source": {
					"type": "git",
					"url":  "https://github.com/phoxx-mvc/package-user.git",
					"reference": "master"
				}
			}
		}
	],
	"extra": {
		"installer-paths": {
			"core": ["phoxx-mvc/core"],
			"packages/parameter": ["phoxx-mvc/package-parameter"],
			"packages/permission": ["phoxx-mvc/package-permission"],
			"packages/user": ["phoxx-mvc/package-user"]
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@php scripts/generate-config.php",
			"@php scripts/generate-docs.php"
		]
	},
	"classmap-authoritative": true
}